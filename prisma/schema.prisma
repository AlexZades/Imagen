generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  email        String   @unique
  passwordHash String
  avatarUrl    String?
  isAdmin      Boolean  @default(false)
  createdAt    DateTime @default(now())

  // Credits system
  creditsFree            Int       @default(0) @map("credits_free")
  creditsFreeLastGrantAt DateTime? @map("credits_free_last_grant_at")

  nsfwEnabled Boolean @default(false)

  images      Image[]
  likes       Like[]
  redeemedKey AccessKey?

  @@index([email])
  @@index([username])
}

model Image {
  id                String   @id @default(cuid())
  userId            String
  title             String
  description       String?
  promptTags        String?
  contentRating     String   @default("safe") @map("content_rating")
  imageUrl          String
  thumbnailUrl      String?
  filename          String?
  thumbnailFilename String?
  width             Int
  height            Int
  size              Int?
  
  maleCharacterTags   String? @map("male_character_tags")
  femaleCharacterTags String? @map("female_character_tags")
  otherCharacterTags  String? @map("other_character_tags")

  createdAt         DateTime @default(now())
  viewCount         Int      @default(0)
  likeCount         Int      @default(0)
  dislikeCount      Int      @default(0)

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  imageTags   ImageTag[]
  imageStyles ImageStyle[]
  likes       Like[]

  @@index([userId])
  @@index([createdAt])
}

model Tag {
  id               String   @id @default(cuid())
  name             String   @unique
  description      String?
  loras            String[] @default([])
  minStrength      Float?
  maxStrength      Float?
  forcedPromptTags String?
  nsfw             Boolean  @default(false)
  usageCount       Int      @default(0)
  createdAt        DateTime @default(now())

  slider           Boolean  @default(false)
  sliderLowText    String?  @map("slider_low_text")
  sliderHighText   String?  @map("slider_high_text")

  maleCharacterTags   String? @map("male_character_tags")
  femaleCharacterTags String? @map("female_character_tags")
  otherCharacterTags  String? @map("other_character_tags")

  imageTags ImageTag[]
}

model Style {
  id             String   @id @default(cuid())
  name           String   @unique
  description    String?
  checkpointName String?
  usageCount     Int      @default(0)
  createdAt      DateTime @default(now())

  imageStyles ImageStyle[]
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  imageId   String
  isLike    Boolean
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  image Image @relation(fields: [imageId], references: [id], onDelete: Cascade)

  @@unique([userId, imageId])
  @@index([imageId])
}

model ImageTag {
  id        String   @id @default(cuid())
  imageId   String
  tagId     String
  createdAt DateTime @default(now())

  image Image @relation(fields: [imageId], references: [id], onDelete: Cascade)
  tag   Tag   @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([imageId, tagId])
  @@index([tagId])
}

model ImageStyle {
  id        String   @id @default(cuid())
  imageId   String
  styleId   String
  createdAt DateTime @default(now())

  image Image @relation(fields: [imageId], references: [id], onDelete: Cascade)
  style Style @relation(fields: [styleId], references: [id], onDelete: Cascade)

  @@unique([imageId, styleId])
  @@index([styleId])
}

model GenerationConfig {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SimpleTag {
  id         String   @id @default(cuid())
  tag        String   @unique
  category   String?
  usageCount Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([usageCount])
  @@index([category])
}

model AccessKey {
  id         String    @id @default(cuid())
  key        String    @unique
  isRedeemed Boolean   @default(false)
  redeemedBy String?   @unique
  redeemedAt DateTime?
  createdAt  DateTime  @default(now())

  redeemer User? @relation(fields: [redeemedBy], references: [id])
}

model GenerationRequest {
  id        String   @id @default(cuid())
  userId    String?
  status    String   @default("pending") // pending, processing, completed, failed
  params    String   // JSON string
  result    String?  // Text (base64 or url)
  error     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([status])
  @@index([createdAt])
}