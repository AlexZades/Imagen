// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String    @id @default(cuid())
  username                String    @unique
  email                   String    @unique
  passwordHash            String
  isAdmin                 Boolean   @default(false)
  avatarUrl               String?
  createdAt               DateTime  @default(now())
  creditsFree             Int       @default(0)
  creditsFreeLastGrantAt  DateTime?
  nsfwEnabled             Boolean   @default(false)
  images                  Image[]
  likes                   Like[]
}

model Image {
  id                  String   @id @default(cuid())
  userId              String
  title               String
  description         String?
  promptTags          String?  // Comma-delimited simple tags
  maleCharacterTags   String?  // Comma-delimited male character names
  femaleCharacterTags String?  // Comma-delimited female character names
  otherCharacterTags  String?  // Comma-delimited other character names
  contentRating       String   @default("safe")
  imageUrl            String
  thumbnailUrl        String?
  filename            String
  thumbnailFilename   String?
  width               Int
  height              Int
  size                Int
  viewCount           Int      @default(0)
  likeCount           Int      @default(0)
  dislikeCount        Int      @default(0)
  createdAt           DateTime @default(now())
  
  user                User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  imageTags           ImageTag[]
  imageStyles         ImageStyle[]
  likes               Like[]
}

model Tag {
  id                  String   @id @default(cuid())
  name                String   @unique
  loras               String[] // Array of LoRA filenames
  minStrength         Float?
  maxStrength         Float?
  forcedPromptTags    String?
  description         String?
  slider              Boolean  @default(false)
  sliderLowText       String?
  sliderHighText      String?
  nsfw                Boolean  @default(false)
  maleCharacterTags   String?
  femaleCharacterTags String?
  otherCharacterTags  String?
  usageCount          Int      @default(0)
  createdAt           DateTime @default(now())
  
  imageTags           ImageTag[]
}

model Style {
  id              String   @id @default(cuid())
  name            String   @unique
  description     String?
  checkpointName  String?
  usageCount      Int      @default(0)
  createdAt       DateTime @default(now())
  
  imageStyles     ImageStyle[]
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  imageId   String
  isLike    Boolean
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  image     Image    @relation(fields: [imageId], references: [id], onDelete: Cascade)
  
  @@unique([userId, imageId])
}

model ImageTag {
  id        String   @id @default(cuid())
  imageId   String
  tagId     String
  createdAt DateTime @default(now())
  
  image     Image @relation(fields: [imageId], references: [id], onDelete: Cascade)
  tag       Tag   @relation(fields: [tagId], references: [id], onDelete: Cascade)
  
  @@unique([imageId, tagId])
}

model ImageStyle {
  id        String   @id @default(cuid())
  imageId   String
  styleId   String
  createdAt DateTime @default(now())
  
  image     Image  @relation(fields: [imageId], references: [id], onDelete: Cascade)
  style     Style @relation(fields: [styleId], references: [id], onDelete: Cascade)
  
  @@unique([imageId, styleId])
}

model SimpleTag {
  id          String   @id @default(cuid())
  tag         String   @unique
  category    String?
  usageCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model GenerationConfig {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}